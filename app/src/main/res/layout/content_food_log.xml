<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".food_log"
    tools:showIn="@layout/activity_food_log">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="10">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7.5" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Food Log"
                android:layout_centerInParent="true"
                app:layout_constraintHorizontal_weight="5"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="127dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none"
                android:layout_weight="1">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:stretchColumns="1,2,3,4">
                    <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/addButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            android:src="@mipmap/plus_circle"
                            app:layout_constraintHorizontal_weight="1" />
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/addButton"
                            android:text="Name"
                            app:layout_constraintHorizontal_weight="2.25"
                            android:gravity="center"
                            android:padding="0dip" />
                        <TextView
                            android:id="@+id/calories"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/name"
                            android:text="Calories"
                            app:layout_constraintHorizontal_weight="2.25"
                            android:gravity="center"
                            android:padding="0dip" />
                        <TextView
                            android:id="@+id/carbs"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/calories"
                            android:text="Carbs"
                            app:layout_constraintHorizontal_weight="2.25"
                            android:gravity="center"
                            android:padding="0dip" />
                        <TextView
                            android:id="@+id/protein"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/carbs"
                            android:text="Protein"
                            app:layout_constraintHorizontal_weight="2.25"
                            android:gravity="center"
                            android:padding="0dip" />
                    </TableRow>
                </TableLayout>
            </ScrollView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6.5" >

            <TextView
                android:id="@+id/titleEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pie Charts"
                android:layout_centerInParent="true"
                app:layout_constraintHorizontal_weight="5"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="127dp" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

