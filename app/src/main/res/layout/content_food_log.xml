<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".food_log"
    tools:showIn="@layout/activity_food_log">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8" >

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Food Log"
                android:layout_centerInParent="true"
                app:layout_constraintHorizontal_weight="5"
                tools:layout_editor_absoluteX="215dp"
                tools:layout_editor_absoluteY="127dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/relative2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".8" >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addButton"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_gravity="left"
                app:backgroundTint="@color/common_google_signin_btn_text_light_default"
                app:srcCompat="@android:drawable/ic_input_add" />

            <TextView
                android:id="@+id/addText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/addButton"
                android:text="Add New"
                app:layout_constraintHorizontal_weight="5" />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="1">
                <TableRow>
                    <TextView
                        android:id="@+id/calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/addText"
                        android:text="Calories"
                        app:layout_constraintHorizontal_weight="2"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/carbs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/calories"
                        android:text="Carbs"
                        app:layout_constraintHorizontal_weight="2"
                        android:gravity="center"
                        android:padding="3dip" />
                    <TextView
                        android:id="@+id/protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/carbs"
                        android:text="Protein"
                        app:layout_constraintHorizontal_weight="2"
                        android:gravity="right"
                        android:padding="3dip" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

